{
    "name": "ratehopper-contracts",
    "version": "1.1.0",
    "description": "Ratehopper.ai - The Refinancing Layer for Autonomous Debt Markets Redefining Financial Efficiency for Decentralized Lending. Learn more: https://ratehopper.ai",
    "main": "index.js",
    "engines": {
        "node": ">=22.21.1"
    },
    "scripts": {
        "test": "node --max-old-space-size=12288 --expose-gc --optimize-for-size ./node_modules/.bin/hardhat test",
        "test:memory": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat test",
        "test:single": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat test --grep",
        "trace": "node --max-old-space-size=8192 ./node_modules/.bin/hardhat test --v",
        "fulltrace": "node --max-old-space-size=8192 ./node_modules/.bin/hardhat test --vvv",
        "compile": "npx hardhat compile",
        "size": "npx hardhat size-contracts",
        "coverage": "node --max-old-space-size=12288 ./node_modules/.bin/hardhat coverage",
        "clean": "npx hardhat clean",
        "deploy:all": "npx hardhat ignition deploy ignition/modules/SafeDebtManager.ts --network base --reset && npx hardhat ignition deploy ignition/modules/LeveragedPosition.ts --network base",
        "deploy:safe-debt-manager": "npx hardhat ignition deploy ignition/modules/SafeDebtManager.ts --network base",
        "deploy:leveraged-position": "npx hardhat ignition deploy ignition/modules/LeveragedPosition.ts --network base",
        "deploy:zodiac-roles-proxy": "npx hardhat run ignition/deployRolesProxy.ts --network base",
        "deploy:timelock": "npx hardhat run ignition/deployTimelock.ts --network base",
        "verify:safe-debt-manager": "npx hardhat run scripts/verifySafeDebtManager.ts --network base",
        "verify:leveraged-position": "npx hardhat run scripts/verifyLeveragedPosition.ts --network base",
        "verify:handlers": "npx hardhat run scripts/verifyHandlers.ts --network base",
        "wipe": "npx hardhat ignition wipe chain-8453"
    },
    "author": "Ratehopper AI",
    "license": "BUSL-1.1",
    "dependencies": {
        "@morpho-org/bundler-sdk-ethers": "^1.1.0",
        "@openzeppelin/contracts": "^5.4.0",
        "@openzeppelin/contracts-upgradeable": "^5.4.0",
        "@openzeppelin/hardhat-upgrades": "^3.9.1",
        "@safe-global/protocol-kit": "^5.2.0",
        "@safe-global/types-kit": "^1.0.1",
        "@uniswap/v3-periphery": "^1.4.4",
        "axios": "^1.13.2",
        "dotenv": "^16.4.5",
        "hardhat": "^2.27.2",
        "hardhat-contract-sizer": "^2.10.1",
        "viem": "^2.42.0"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.8",
        "@nomicfoundation/hardhat-ignition": "^0.15.0",
        "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@nomicfoundation/hardhat-verify": "^2.1.1",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.2.0",
        "@types/mocha": ">=9.1.0",
        "@types/node": ">=18.0.0",
        "chai": "^4.2.0",
        "eslint": "^9.39.2",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.32.0",
        "ethers": "^6.16.0",
        "hardhat-gas-reporter": "^2.3.0",
        "hardhat-tracer": "^3.4.0",
        "prettier": "^3.7.4",
        "prettier-plugin-solidity": "^1.4.1",
        "solhint": "^5.0.3",
        "solhint-plugin-prettier": "^0.1.0",
        "solidity-coverage": "^0.8.17",
        "ts-node": ">=8.0.0",
        "typechain": "^8.3.2",
        "typescript": ">=4.5.0"
    },
    "packageManager": "yarn@4.12.0"
}
